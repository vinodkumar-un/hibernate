<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.ip.entities">
	<class name="CardPayment" table="CARD_PAYMENT">
		<id name="paymentId" column="PAYMENT_ID">
			<generator class="increment" />
		</id>
		<property name="merchant" column="MERCHANT" />
		<property name="amount" column="AMOUNT" />
		<property name="cardNumber" column="CARD_NO" />
		<property name="cardType" column="CARD_TYPE" />
		<property name="cvv" column="CVV" />
		<property name="expiry" column="EXPIRY" />
	</class>
</hibernate-mapping>






